{
  "$schema": "https://json.schemastore.org/electron-builder",
  "appId": "com.djdesk.app",
  "productName": "DJDesk",
  "files": [
    "**/*",
    "!django-bundle/**"
  ],
  "extraResources": [
    {
      "from": "django-bundle",
      "to": "django-bundle"
    }
  ],
  "mac": {
    "category": "public.app-category.developer-tools",
    "target": ["dmg", "zip"]
  },
  "win": {
    "target": ["nsis", "zip"]
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "category": "Development"
  }
}
